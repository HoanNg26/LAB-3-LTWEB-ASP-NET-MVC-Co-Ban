@model Lab2.Models.Book

@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditBook</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Book</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <table>
            <tr>
                <td> Title:</td>
                <td> @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title"})</td>
                <td> Author:</td>
                <td> @Html.TextBoxFor(model => model.Author, new { @class = "form-control", placeholder = "Author" })</td>
                <td> Image Cover:</td>
                <td> @Html.TextBoxFor(model => model.Image_cover, new { @class = "form-control", placeholder = "Img_cover" })</td>
            </tr>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
